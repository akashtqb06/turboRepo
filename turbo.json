{
  "$schema": "https://turbo.build/schema.json",
  "ui":"tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**","storybook-static/**"]
    },
    "test": {},
    "test:watch": {
      "cache": false, 
      "persistent": true
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
